# .env.example
# Copy to .env.local for local development
# Add to your Akash deployment configuration for production

# Updown.io Configuration
# Get your API key from: https://updown.io/settings/edit
UPDOWN_API_KEY=your-updown-api-key-here

# Optional: Public read-only API key for displaying metrics on frontend
# This is safe to expose in client-side code
NEXT_PUBLIC_UPDOWN_API_KEY=your-read-only-api-key

# Updown.io Check Tokens (get these after running setup script)
NEXT_PUBLIC_UPDOWN_HEALTH_TOKEN=xxxx
NEXT_PUBLIC_UPDOWN_FRONTEND_TOKEN=yyyy

# Frontend URL (used by monitoring setup script)
FRONTEND_URL=https://your-frontend.akash.network

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000  # Timeout in milliseconds
HEALTH_CHECK_PORT=443      # Default port for VPN servers

# Alert Configuration
ALERT_EMAIL=your-email@example.com
ALERT_SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/WEBHOOK/URL