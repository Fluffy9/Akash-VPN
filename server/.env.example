OPENVPN_PROTO=tcp
OPENVPN_CIPHER=AES-256-CBC
OPENVPN_AUTH=SHA1
OPENVPN_RESOLV_RETRY=infinite
OPENVPN_NOBIND=true
OPENVPN_PERSIST_KEY=true
OPENVPN_PERSIST_TUN=true
OPENVPN_CLIENT=true
OPENVPN_VERB=3
OPENVPN_AUTH_USER_PASS=true

# V2Ray Configuration
